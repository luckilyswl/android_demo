<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chat_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:textSize="14sp"
        android:text="2015/5/6    12:10:12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_left_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ser"/>

            <TextView
                android:id="@+id/chat_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="小蜜"
                android:textSize="16sp" />

        </LinearLayout>


        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/kefuborder"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/chat_left_message"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textColor="#3A4449"
            android:text="您好。" />

    </LinearLayout>

</LinearLayout>